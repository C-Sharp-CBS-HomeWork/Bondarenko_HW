<Window x:Class="Task_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_4"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Wind" Loaded="Wind_Loaded">
        <Button x:Name="btn" Content="Button" HorizontalAlignment="Left" Margin="43,32,0,0" VerticalAlignment="Top" Height="61" Width="138" FontSize="20" Click="btn_Click"/>
        <Label x:Name="lbl" Content="Label" HorizontalAlignment="Left" Height="45" Margin="43,127,0,0" VerticalAlignment="Top" Width="138" FontSize="20" HorizontalContentAlignment="Center" Foreground="Black"/>
        <xctk:ColorPicker x:Name="CP" HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="200" Margin="317,21,0,0" SelectedColorChanged="CP_SelectedColorChanged">
        </xctk:ColorPicker>
    </Grid>
</Window>
