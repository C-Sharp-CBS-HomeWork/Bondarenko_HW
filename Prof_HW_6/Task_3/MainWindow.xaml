        <Label x:Name="lblOutput" Content="Output" HorizontalAlignment="Left" Height="53" Margin="319,4,0,0" VerticalAlignment="Top" Width="190" FontSize="36"/>
        <Button x:Name="Cels" Content="Celsius °C" HorizontalAlignment="Left" Height="61" Margin="10,86,0,0" VerticalAlignment="Top" Width="163" FontSize="24" Click="Cels_Click"/>
        <Button x:Name="Far" Content="Fahrenheit °F" HorizontalAlignment="Left" Height="61" Margin="347,86,0,0" VerticalAlignment="Top" Width="162" FontSize="24" Click="Far_Click"/>
        <Button x:Name="Kelv" Content="Kelvin °K" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top" Width="164" FontSize="24" Margin="178,86,0,0" Click="Kelv_Click"/>
        <TextBox x:Name="TBInput" Margin="10,10,269,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" FontSize="36"/>
    </Grid>
</Window>
